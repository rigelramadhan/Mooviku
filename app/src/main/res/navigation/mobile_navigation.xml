<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.rivibi.mooviku.ui.main.home.HomeFragment"
        android:label="@string/label_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_genreFragment"
            app:destination="@id/navigation_genre" />
    </fragment>
    <fragment
        android:id="@+id/navigation_genre"
        android:name="com.rivibi.mooviku.ui.main.genre.GenreFragment"
        android:label="@string/label_genres" />
</navigation>